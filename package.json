{
  "name": "itero",
  "version": "1.0.0",
  "private": true,
  "description": "Project management application with Kanban boards",
  "repository": "git@github.com:MikeSydo/Itero.git",
  "author": "MikeSydo",
  "main": "dist-electron/main.js",
  "scripts": {
    "analyze": "cross-env ANALYZE=1 max build",
    "biome:lint": "npx @biomejs/biome lint",
    "build": "max build",
    "build:electron": "npm run build && npm run electron:build",
    "deploy": "npm run build && npm run gh-pages",
    "dev": "npm-run-all --parallel start:dev api:dev",
    "dev:electron": "npm run electron:transpile && npm-run-all --parallel start:dev api:dev electron:start",
    "dev:frontend": "npm run start:dev",
    "api:dev": "cross-env NODE_ENV=development nodemon --watch api --ext ts --exec tsx api/server.ts",
    "api:build": "tsc --project api/tsconfig.json",
    "api:start": "cross-env NODE_ENV=production node api/dist/server.js",
    "electron:transpile": "tsc --project electron/tsconfig.json",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run electron:transpile && electron-builder",
    "electron:dist:mac": "npm run build:electron && electron-builder --mac --arm64",
    "electron:dist:win": "npm run build:electron && electron-builder --win --x64",
    "electron:dist:linux": "npm run build:electron && electron-builder --linux --x64",
    "gh-pages": "gh-pages -d dist",
    "i18n-remove": "pro i18n-remove --locale=zh-CN --write",
    "postinstall": "max setup",
    "jest": "jest",
    "lint": "npm run biome:lint && npm run tsc",
    "lint-staged": "lint-staged",
    "openapi": "max openapi",
    "prepare": "husky",
    "preview": "npm run build && max preview --port 8000",
    "record": "cross-env NODE_ENV=development UMI_ENV=test max record --scene=login",
    "serve": "umi-serve",
    "start": "cross-env UMI_ENV=dev max dev",
    "start:dev": "cross-env UMI_ENV=dev MOCK=none max dev",
    "start:no-mock": "cross-env MOCK=none max dev",
    "start:pre": "cross-env UMI_ENV=pre MOCK=none max dev",
    "start:test": "cross-env UMI_ENV=test MOCK=none max dev",
    "test": "jest",
    "test:coverage": "npm run jest -- --coverage",
    "test:update": "npm run jest -- -u",
    "tsc": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@ant-design/pro-components": "^2.8.9",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@prisma/client": "^6.17.1",
    "antd": "^5.26.4",
    "antd-style": "^3.7.0",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@ant-design/pro-cli": "^3.3.0",
    "@biomejs/biome": "^2.1.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-helmet": "^6.1.11",
    "@umijs/max": "^4.3.24",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "mockjs": "^1.1.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prisma": "^6.17.1",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "umi-presets-pro": "^2.0.3",
    "umi-serve": "^1.9.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
