  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "required": ["id", "name", "listId"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Task ID"
          },
          "name": {
            "type": "string",
            "description": "Task name"
          },
          "listId": {
            "type": "integer",
            "description": "Parent list ID"
          },
          "description": {
            "type": "string",
            "description": "Task description"
          }
        }
      },
      "TasksList": {
        "type": "object",
        "required": ["id", "name", "boardId"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "List ID"
          },
          "name": {
            "type": "string",
            "description": "List name"
          },
          "boardId": {
            "type": "integer",
            "description": "Parent board ID"
          },
          "position": {
            "type": "integer",
            "description": "List position on board"
          },
          "tasks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Task"
            }
          }
        }
      },
      "KanbanBoard": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer",
