generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Attachment {
  id          Int      @id @default(autoincrement())
  taskId      Int
  fileName    String
  fileUrl     String
  fileSize    Int
  mimeType    String
  uploadedAt  DateTime @default(now())
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Task {
  id     Int       @id @default(autoincrement())
  listId Int
  position Int @default(0)
  name   String
  description String?
  startedDate DateTime?
  endDate DateTime?
  attachments     Attachment[]
  list   TasksList @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model TasksList {
  id      Int         @id @default(autoincrement())
  name    String
  boardId Int
  tasks   Task[]
  position Int @default(0)
  board   KanbanBoard @relation(fields: [boardId], references: [id], onDelete: Cascade)
}

model KanbanBoard {
  id    Int         @id @default(autoincrement())
  name  String
  isFavorite Boolean @default(false)
  lists TasksList[]
}
