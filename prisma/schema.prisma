generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id     Int       @id @default(autoincrement())
  listId Int
  name   String
  position Int @default(0)
  list   TasksList @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model TasksList {
  id      Int         @id @default(autoincrement())
  name    String
  boardId Int
  tasks   Task[]
  position Int @default(0)
  board   KanbanBoard @relation(fields: [boardId], references: [id], onDelete: Cascade)
}

model KanbanBoard {
  id    Int         @id @default(autoincrement())
  name  String
  lists TasksList[]
}
